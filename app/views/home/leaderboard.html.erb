<div class="row marketing">
  <div class="container">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <h1>Leaderboard</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Rank</th>
            <th>Username</th>
            <th>Questions Answered</th>
            <th>Score</th>
          </tr>
        </thead>
        <tbody></tbody>
        <% @users.each_with_index do |user, index| %>
          <tr>
            <td>
              <%= index + 1 %>
            </td>
            <td>
              <%= user.username %>
            </td>
            <td>
              <%= user.answers.count %>
            </td>
            <td>
              <%= user.score %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>